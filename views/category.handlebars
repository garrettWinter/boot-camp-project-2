{{!-- {{results.product_genre}} --}}
{{#each results as |post|}}
{{!-- <div>{{post.product_genre}}</div> --}}
<div class="productCard p-1">
  <div class="box">
    <article class="media">
      <div class="media-left">
        <figure class="image is-128x128 is-inline-block">
          <a class="image is-256x256 is-inline-block" href="/product/{{post.product_id}}"><img class="image is-256x256"
              src="{{post.product_image}}" alt="Movie-Image"></a>
        </figure>
      </div>
      <div class="media-content">
        <div class="content">
          <p>
          <div class="fontfamily-sans-serif"><strong><a href="/product/{{post.product_id}}">{{post.product_name}}</a><br>Genre: {{post.product_genre}}
            </strong></div>
          <br>
          {{post.product_short_description}}
          </p>
        </div>
        <button data-productID="{{post.product_id}}" class="button is-success addToCartBtn" height="96" width="96">Buy
          Now!</button>
        ${{post.product_price}}
        <br>
      </div>
    </article>
  </div>
</div>
{{/each}}

<script src="/js/addToCart.js"></script>