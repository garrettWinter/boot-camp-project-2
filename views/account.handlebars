{{#unless logged_in}}
{{!-- Line 26 to 54 wrapped in a form. It is needed for buttons to actually work --}}
{{!-- <h2 class="has-text-white-bis has-text-weight-bold">Login</h2> --}}
<form class="form login-form">
  <div class="field">
    <p class="control has-icons-left has-icons-right">
      <input class="input" type="email" placeholder="Email" id="email-login">
      <span class="icon is-small is-left">
        <i class="fas fa-envelope"></i>
      </span>
      <span class="icon is-small is-right">
        <i class="fas fa-check"></i>
      </span>
    </p>
  </div>
  <div class="field">
    <p class="control has-icons-left">
      <input class="input" type="password" placeholder="Password" id="password-login">
      <span class="icon is-small is-left">
        <i class="fas fa-lock"></i>
      </span>
    </p>
  </div>
  <div class="field">
    <p class="control">
      <button class="button is-success mb-4" type="submit">
        Login
      </button>
    </p>
  </div>
</form>

{{!-- <h2 class="has-text-white-bis mt-4 is-family-sans-serif has-text-weight-bold">Sign-Up</h2> --}}
