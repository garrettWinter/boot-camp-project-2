{{!-- Renders the details of specific movie chosen by User. --}}
<div class="tile is-ancestor">
    <div class="tile is-vertical is-8">
        <div class="tile">
            <div class="tile is-parent is-vertical">
                <article class="tile is-child notification is-info">
                    <figure class="image is-4by1 is-inline-block">
                        <a class="image is-256x256 is-inline-block"><img class="image is-256x256"
                                src="{{product_image}}" alt="Movie-Image"></a>
                    </figure>
                </article>
            </div>
            <div class="tile is-parent">
                <article class="tile is-child notification is-success">
                    <div class="content">
                        <p class="title">{{product_name}}</p>
                        <p class="subtitle">{{product_short_description}}</p>
                        <div class="content">
                            <strong>Trailer Description</strong>
                            <br>
                            <br>
                            {{product_trailer_description}}
                            <br>
                            <br>
                            <a target="_blank" href="{{product_trailer_link}}" src='{{product_trailer_link}}'>Click here
                                for Trailer!</a>
                        </div>
                        {{#if logged_in}}
                        <button data-productID="{{product_id}}" class="button is-link addToCartBtn" height="96"
                            width="96">Buy Now!</button>
                        {{else}}
                        <p height="96" width="96" class="is-size-5 has-text-weight-bold has-text-danger">Please login to
                            add to cart</p>
                        {{/if}}
                        ${{product_price}}
                    </div>
                </article>
            </div>
        </div>
    </div>
</div>

<script src="/js/addToCart.js"></script>